datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @default(autoincrement()) @id
  email     String    @unique
  name      String?
  password  String
  createdOn DateTime  @default(now())
  updateOn  DateTime  @updatedAt
  role      String    @default("menber")
}
model RPG {
  id        Int       @default(autoincrement()) @id
  nome      String?
  Especie  String?
  Classe   String?
  Guilda  String?
}